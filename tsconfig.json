{
    "compileOnSave": false,
    "compilerOptions": {
        "baseUrl": "./",
        "outDir": "./dist/out-tsc",
        "sourceMap": true,
        "declaration": false,
        "module": "esnext",
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "importHelpers": true,
        "target": "es2015",
        "typeRoots": [
            "node_modules/@types"
        ],
        "lib": [
            "es2018",
            "dom"
        ],
        "paths": {
            "@env": [
                "src/environments"
            ],
            "@env/*": [
                "src/environments/*"
            ],
            "@core": [
                "src/app/core"
            ],
            "@core/*": [
                "src/app/core/*"
            ],
            "@routes": [
                "src/app/routes"
            ],
            "@routes/*": [
                "src/app/routes/*"
            ],
            "@shared": [
                "src/app/shared"
            ],
            "@shared/*": [
                "src/app/shared/*"
            ]
        }
    }
}
